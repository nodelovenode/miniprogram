/* pages/illustration/illustration.wxss */

.continent-box {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: "华文黑体";
  font-size: 18px;
  background-color: white;
  color: #55b4ea;
  height: 50px;
  border: 5px solid #55b4ea;
  border-radius: 10px;
  margin-top: 20px;
}

.country-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 10px;
  margin-bottom: 10px;
}

.country {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: "华文黑体";
  font-size: 15px;
  width: 30%;
  height: 80px;
  margin-top: 10px;
  padding-left: 10px;
}
