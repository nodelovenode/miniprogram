.hx{
border: 1px solid red;
height: 40px;
text-align: center;
justify-content: center;
align-content: center;
}

.bt-view{  
  display: flex;  
  flex-direction: column;  
  margin: 30px;
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #FFCC00;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFCC00;  
}  
.nr{
  border: 1px solid #eee;
margin-top: 30px;
height:300px;
}
.bt{
      font-family: "华文黑体";
  font-size: 12px;
  margin: 3px;
}