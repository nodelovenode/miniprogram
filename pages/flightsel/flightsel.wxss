/* pages/flightsel/flightsel.wxss */

page {
  background-color: #55b4ea;
}

.body-top {
  margin-top: 10%;  
  margin-left: 5%;
  margin-right: 5%;
  border: 2px solid #55b4ea;
  border-radius: 10px;
  background-color: #fff;
}

.nav {
  width: 70%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background-color: #55b4ea;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  border: 2px solid #55b4ea;
  background-color: #fff;
  font-weight: bold;
  font-size: 17px;
  font-family: "华文黑体";
  color: #55b4ea;
}

.blue {
  line-height: 100rpx;
  text-align: center;
  background-color: #55b4ea;
  flex: 1;
  border: 1px solid #55b4ea;
  font-weight: bold;
  font-size: 17px;
  font-family: "华文黑体";
  color: #fff;
}

.show {
  display: block;
  text-align: center;
  line-height: 100rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

.col1 {
  margin-top: 5%;
  align-content: center;
  justify-content: center;
  display: flex;
}

.col2 {
  flex-flow: row;
  display: flex;
  align-content: center;
  justify-content: center;
margin-top: 5%;

}

.picker {
  font-family: "华文黑体";
  font-size: 12px;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: 10px;
}

.gk {
  height: 45px;
  width: 100%;
}

.gk1 {
  height: 40px;
  font-family: "华文黑体";
  font-size: 12px;
  color: #808080;
  border-bottom: 1px solid #eee;
}

.input {
  font-family: "华文黑体";
  font-size: 12px;
  width: 150px;
  height: 30px;
border: 1px solid #eee;
}

.button1 {
  width: 100px;
  border-radius: 5px;
  margin: 3% auto;
  padding-top: 2px;
  font-size: 15px;
  background-color: #55b4ea;
  color: white;
  overflow: hidden;
  height: 40px;
}

.button1::after {
  border: 1px solid #55b4ea;
}

.t1 {
  font-family: "华文黑体";
  font-size: 10px;
  border-bottom: 1px solid #eee;
}
